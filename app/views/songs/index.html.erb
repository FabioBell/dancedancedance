<div class="container">
  <h1>Listing songs</h1>

  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Duration</th>
        <th>Genre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @songs.each do |song| %>
        <tr>
            <td><%= song.name %></td>
            <td><%= song.duration %></td>
            <td><%= song.song_genre.try(:genre) %></td>
            <td><%= link_to 'Show', song_path(song.id) %></td>
            <td><%= link_to 'Edit', edit_song_path(song) %></td>
            <td><%= link_to 'Destroy', song_path(song.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Song', new_song_path, class:"btn btn-default" %>
</div>

